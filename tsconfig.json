{
  "compilerOptions": {
    "rootDir": "./api",
    "outDir": "./dist",

    "module": "nodenext",
    "target": "esnext",
    "types": ["node"],
    "esModuleInterop": true,

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "moduleResolution": "nodenext",
    "verbatimModuleSyntax": true
  },
  "include": ["api/**/*"]
}
